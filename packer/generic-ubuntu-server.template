	"post-processors": [
		{
			"type": "compress",
			"output": "GenericUbuntuServer.tar.gz",
			"only": ["virtualbox-iso"]
		},
		{
			"type": "vagrant",
			"output": "GenericUbuntuServer-{{.Provider}}.box",
			"only": ["virtualbox-iso"]
		}
	]
}
